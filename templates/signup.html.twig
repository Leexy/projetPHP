{% extends 'layout.html.twig' %}

{% block title %}Sign up â€“ {{ parent() }}{% endblock %}
{% block css %}
{{ parent() }}
    <link href="/assets/css/loginForm.css" rel="stylesheet" type="text/css" media="screen" />
{% endblock %}
{% block content %}
  <div class="container">
  <div class="login">
    <h1>Sign up</h1>
    {% if flash.error is defined %}
      <p class="error">
        {{ flash.error }}
      </p>
    {% endif %}
    <form method="post" action="{{ urlFor('signup.process') }}">
      <p>
        <img id="userName" src="/assets/img/user.png">
        <input type="text" autofocus required id="display-name" name="display-name" placeholder="Johnny" />
      </p>    
      <p>
        <img id="userPwd" src="/assets/img/email.png">
        <input type="email" autofocus required id="email" name="email" placeholder="john.doe@example.com" />
      </p>
      <p>
        <img id="userPwd" src="/assets/img/pwd.png">
        <input type="password" required id="password" name="password" placeholder="password" />
      </p>
      <p>
        <img id="userPwd" src="/assets/img/pwd.png">
        <input type="password" required id="password-confirm" name="password-confirm" placeholder="re-type your password" />
      </p>
      <p class="submit"><button type="submit">Sign up</button></p>
      <div class="login-help">
        <p>
          Already have an account?
          <a href="{{ urlFor('login.page') }}">Sign in!</a>
        </p>
      </div>
    </form>
  </div>
  </div>
{% endblock %}
