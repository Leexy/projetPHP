{% extends 'layout.html.twig' %}

{% block title %}Log in â€“ {{ parent() }}{% endblock %}
{% block css %}
{{ parent() }}
    <link href="/assets/css/loginForm.css" rel="stylesheet" type="text/css" media="screen" />
{% endblock %}
{% block content %}
  {% if flash.error is defined %}
    <p class="error">
      {{ flash.error }}
    </p>
  {% endif %}
  <div class="container">
  <div class="login">
    <h1>Login</h1>
    <form method="post" action="{{ urlFor('login.process') }}">
      <p>
        <img id="userImg" src="/assets/img/user.png">
        <input type="email" autofocus required id="email" name="email" value="{{ email }}" placeholder="john.doe@example.com" />
      </p>
      <p>
        <img id="userPwd" src="/assets/img/pwd.png">
        <input type="password" required id="password" name="password" placeholder="password" />
      </p>
      {% if redirect_to is defined %}
        <input type="hidden" name="redirect_to" value="{{ redirect_to }}" />
      {% endif %}
      <p class="submit"><button type="submit">Login</button></p>
      <div class="login-help">
        <p>
          Not registered?
          <a href="{{ urlFor('signup.page') }}">Create an account</a>.
        </p>
      </div>
    </form>
  </div>
  </div>
{% endblock %}
