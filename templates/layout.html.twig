<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}BattleShip{% endblock %}</title>
{% block css %}
    <link href="/assets/css/style.css" rel="stylesheet" type="text/css" media="screen" />
{% endblock %}
    <link rel="icon" type="img/png" href="/assets/img/favicon.png" />
  </head>
  <body>
    <div id="wrapper">
    <div id="header-wrapper">
      <div id="header">
        <div id="title">
          <h1>Battleship game</h1><br/>
        </div>
      </div>
    </div>  
    <!-- end #header -->
{% if user_role != "guest" %}    
    <div id="menu-wrapper">
      <ul id="menu">
        <li><a href="{{ urlFor('games.list') }}"><span>Join a game</span></a></li>
        <li><a href="{{ urlFor('user.games.list') }}"><span>My games</span></a></li>
        <li><a href="#"><span>Profile</span></a></li>
        <li><a href="#"><span>Statistics</span></a></li>
      </ul>
      <p>Hello {{ user.getEmail() }}! <a href="{{ urlFor('logout.process') }}"><img id="logout" title="Log out" src="/assets/img/logout.png" alt="Log out"></a></p>
    </div>
{% endif %}
    <!-- end #menu -->
    <div id="page">
{% block content %}
{% endblock %}
      <div style="clear: both;">&nbsp;</div>
    </div>
    <!-- end #page -->
  </div>
  <div id="footer">
    <p>2015. All rights reserved. Developed by <a href="https://github.com/Leexy/projetPHP">Agathe Grunberg</a>.</p>
  </div>
{% block js %}
    <script src="/assets/js/jquery-2.1.3.min.js"></script>
{% endblock %}
  </body>
</html>
